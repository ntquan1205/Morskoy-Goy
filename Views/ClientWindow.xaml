<Window x:Class="Morskoy_Goy.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской Бой - Клиент" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="← Назад" 
                        Width="80"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="BackButton_Click"
                        Cursor="Hand"/>

                <TextBlock Text="ПОДКЛЮЧЕНИЕ К ХОСТУ" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Подключение к игре" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Ваше имя:" Margin="0,0,0,5"/>
                <TextBox x:Name="PlayerNameTextBox" 
                         Text="Игрок 2" 
                         Height="30"
                         FontSize="14"/>

                <TextBlock Text="IP адрес хоста:" Margin="0,15,0,5"/>
                <TextBox x:Name="HostIpTextBox" 
                         Text="127.0.0.1" 
                         Height="30"
                         FontSize="14"/>

                <TextBlock Text="Порт:" Margin="0,15,0,5"/>
                <TextBox x:Name="PortTextBox" 
                         Text="8888" 
                         Height="30"
                         FontSize="14"/>

                <Button x:Name="ConnectButton"
                        Content="🔗 ПОДКЛЮЧИТЬСЯ К ИГРЕ"
                        Height="60"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#2196F3"
                        Foreground="White"
                        Margin="0,30,0,0"
                        Click="ConnectButton_Click"
                        Cursor="Hand"/>

                <Border x:Name="StatusBorder"
                        Background="#E8F5E8"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="StatusText" 
                                   Text="Подключение..."
                                   FontWeight="Bold"
                                   Foreground="#2E7D32"/>
                        <TextBlock x:Name="ConnectionInfoText" 
                                   Text=""
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#F3E5F5"
                        BorderBrush="#9C27B0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Как подключиться:" 
                                   FontWeight="Bold"
                                   Foreground="#6A1B9A"/>
                        <TextBlock Text="1. Узнайте IP и порт у хоста игры" 
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="2. Введите данные в поля выше"/>
                        <TextBlock Text="3. Нажмите 'Подключиться'"/>
                        <TextBlock Text="4. После подключения начнется игра"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <TextBlock Text="Для тестирования на одном компьютере используйте 127.0.0.1"
                       Foreground="#666"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>