<Window x:Class="Morskoy_Goy.Views.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской Бой - Хост" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4CAF50" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="← Назад" 
                        Width="80"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Command="{Binding BackCommand}"
                        Cursor="Hand"/>

                <TextBlock Text="ВЫ - ХОСТ ИГРЫ" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Настройки хоста" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Ваше имя:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PlayerName, Mode=TwoWay}" 
                         Height="30"
                         FontSize="14"
                         IsEnabled="{Binding IsControlsEnabled}"/>

                <TextBlock Text="Порт для подключения:" Margin="0,15,0,5"/>
                <TextBox Text="{Binding Port, Mode=TwoWay}" 
                         Height="30"
                         FontSize="14"
                         IsEnabled="{Binding IsControlsEnabled}"/>

                <Button Content="🚀 ЗАПУСТИТЬ СЕРВЕР И ЖДАТЬ СОПЕРНИКА"
                        Height="60"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Margin="0,30,0,0"
                        Command="{Binding StartHostCommand}"
                        IsEnabled="{Binding IsControlsEnabled}"
                        Cursor="Hand"/>

                <Border x:Name="StatusBorder"
                        Background="#FFF3E0"
                        BorderBrush="#FFB300"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusText}" 
                                   FontWeight="Bold"
                                   Foreground="#E65100"/>
                        <TextBlock Text="{Binding ConnectionInfo}" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#E3F2FD"
                        BorderBrush="#2196F3"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Инструкция:" 
                                   FontWeight="Bold"
                                   Foreground="#0D47A1"/>
                        <TextBlock Text="1. Нажмите 'Запустить сервер'" 
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="2. Сообщите свой IP и порт сопернику"/>
                        <TextBlock Text="3. Ждите подключения второго игрока"/>
                        <TextBlock Text="4. После подключения начнется игра"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel>
                <TextBlock Text="Ваш IP адрес для подключения:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding IpAddress}" 
                           FontSize="14"
                           Foreground="#1976D2"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>