<Window x:Class="Morskoy_Goy.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Morskoy_Goy.Views"
        Title="Морской Бой - Игра" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#1E88E5" 
                Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="🚪 Выйти в меню" 
                        Width="120"
                        Height="30"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Command="{Binding ExitCommand}"
                        Cursor="Hand"/>

                <TextBlock Text="{Binding GameStatus}"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="50,0,0,0"
                           VerticalAlignment="Center"/>

                <TextBlock Text="{Binding CurrentPlayerInfo}"
                           FontSize="14"
                           Foreground="White"
                           Margin="50,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="20">
                    <TextBlock Text="Твое поле" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <controls:GameField x:Name="MyField" 
                                        Width="350" 
                                        Height="350"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="20">
                    <TextBlock Text="Поле противника" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <controls:GameField x:Name="EnemyField" 
                                        Width="350" 
                                        Height="350"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel>
                <TextBlock Text="{Binding MessageText}"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Статус подключения: " 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="#4CAF50"
                               FontWeight="Bold"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>