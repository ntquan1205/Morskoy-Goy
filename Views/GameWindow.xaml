<Window x:Class="Morskoy_Goy.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской Бой - Игра" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#1E88E5" 
                Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ExitButton"
                        Content="🚪 Выйти в меню" 
                        Width="120"
                        Height="30"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="ExitButton_Click"
                        Cursor="Hand"/>

                <TextBlock x:Name="GameStatusText"
                           Text="Игра начинается..." 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="50,0,0,0"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="PlayerInfoText"
                           Text="" 
                           FontSize="14"
                           Foreground="White"
                           Margin="50,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                

                
            </Grid>
        </Grid>


        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Статус подключения: " 
                           FontWeight="Bold"/>
                <TextBlock x:Name="ConnectionStatusText" 
                           Text="Подключено"
                           Foreground="#4CAF50"
                           FontWeight="Bold"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>