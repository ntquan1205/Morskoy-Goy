<Window x:Class="Morskoy_Goy.Views.ShipPlacementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Morskoy_Goy.Views"
        Title="Расстановка кораблей" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E88E5" Padding="15">
            <TextBlock Text="Расставьте ваши корабли" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock Text="Ваше поле" 
                           FontSize="18" 
                           Margin="0,0,0,10"/>
                <controls:GameField x:Name="PlacementField"
                                    Width="400" 
                                    Height="400"/>
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#F5F5F5" 
                    Margin="20"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Выберите корабль:" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ListBox x:Name="ShipsListBox"
                             ItemsSource="{Binding ShipsToPlace}"
                             DisplayMemberPath="DisplayName"
                             Height="150"
                             Margin="0,0,0,20"
                             SelectionChanged="ShipsListBox_SelectionChanged">
                    </ListBox>

                    <TextBlock Text="Ориентация:" 
                               FontSize="14"
                               Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <RadioButton Content="Горизонтально" 
                                     IsChecked="True"
                                     Margin="0,0,10,0"/>
                        <RadioButton Content="Вертикально"/>
                    </StackPanel>

                    <Button Content="Расставить случайно"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding RandomPlaceCommand}"/>

                    <Button Content="Очистить поле"
                            Height="35"
                            Margin="0,0,0,10"
                            Command="{Binding ClearCommand}"/>

                    <Button Content="Готов к бою!"
                            Height="45"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#4CAF50"
                            Foreground="White"
                            IsEnabled="{Binding IsReadyButtonEnabled}"
                            Command="{Binding ReadyCommand}"/>

                    <TextBlock Text="{Binding StatusText}" 
                               Margin="0,20,0,0"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderThickness="0,1,0,0"
                Padding="10">
            <TextBlock Text="Кликайте по полю для размещения кораблей"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>